#!/bin/bash
set +e

if [[ ${DEBUG} == "true" ]]; then set -x; else set +x; fi

echo -e "\n---> run time\n"


cd ${APP_HOME}

if [ -s ".s2iconfig/vars.sh" ]; then
	set +x
	source .s2iconfig/vars.sh
	if [[ ${DEBUG} == "true" ]]; then set -x; else set +x; fi

	source /usr/local/bin/functions.sh
	generate_config
fi

if [ -s ".s2iconfig/scripts/deploy.sh" ]; then
	source .s2iconfig/scripts/deploy.sh
fi

sleep 60

java -jar springkafka-0.0.1-SNAPSHOT.jar -Delasticsearch.host=${ELASTIC_HOST} -Delasticsearch.clustername=${ELASTIC_CLUSTERNAME} -Delasticsearch.port=${ELASTIC_PORT} -Denvironment=${ENVIRONMENT} -Dredis.address=${REDIS_ADDRESS} -Dredis.timeout=${REDIS_TIMEOUT} -Dredis.password=${REDIS_PASSWORD}